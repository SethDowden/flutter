<div class="panel-body">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
      <div class="form-group">
        <%= f.email_field :email, :class => "form-control", :placeholder => "E-mail" %>
      </div>
      <div class="form-group">
        <%= f.text_field :full_name, :class => "form-control", :placeholder => "Full name" %>
      </div>
      <div class="form-group">
        <%= f.text_field :username, :class => "form-control", :placeholder => "username" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %>
      </div>
      <div><%= f.submit "Sign up", :class => "btn btn-lg btn-success btn-block" %></div>
    </fieldset>
  <% end %>
</div>